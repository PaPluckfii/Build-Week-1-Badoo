<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">


    <ImageView
        android:id="@+id/iv_Left_Arrow"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        app:srcCompat="@drawable/left_arrow_loginactivity" />

    <ImageView
        android:id="@+id/iv_Logo_Badoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_10"
        app:srcCompat="@drawable/logo_badoo_txt" />

    <TextView
        android:id="@+id/LoginActivity_Badoo_ShadowUnderline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/iv_Logo_Badoo"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/background_grey" />

    <EditText
        android:id="@+id/et_LoginActivity_emailInput"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_Logo_Badoo"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/LoginActivity_EmailorMobile_txt"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_Left_Arrow"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/tvLoginScreen_EmailOrMobile"
        android:textColor="@color/theme_purple"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/LoginActivity_Password"
        style="@style/LoginActivityEditTextStyle"
        android:inputType="textWebPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_LoginActivity_emailInput"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvLoginScreen_Password_txt"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_LoginActivity_emailInput"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/tvLoginScreen_Password"
        android:textColor="@color/theme_purple"
        android:textStyle="normal" />

    <Button
        android:id="@+id/LoginScreen_button"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LoginActivity_Password"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/rectangle"
        android:text="@string/Button_LoginActivity_SignIn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20" />

    <TextView
        android:id="@+id/tvForgotPassword_txt"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LoginScreen_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/tvLoginActivity_ForgotPassword"
        android:textColor="@color/theme_purple"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvPrivacy_TermsOfService"
        style="@style/LoginActivityEditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPassword_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/tvLoginActivity_Terms"
        android:textColor="@color/tvLoginActivity_grey"
        android:textStyle="normal" />


</RelativeLayout>