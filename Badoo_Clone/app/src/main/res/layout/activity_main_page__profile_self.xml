<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage_ProfileSelf"
    android:background="@color/background_grey">

    <ImageView
        android:id="@+id/myProfile_ivBadooLogo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/logo_badoo_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/iv_SettingIcon_ForMyProfileMainActivity"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
         android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_ivBadooLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_settings_icon_grey" />

    <ImageView
        android:id="@+id/iv_ProfileIcon_for_MainActivityProfile"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_ivBadooLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user_profile_icon_grey" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/myProfile_btnLocation"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/ic_location_grey" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/myProfile_btnCardsProfile"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/cards_profile_grey" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/myProfile_btnMessages"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/messenger_icon_grey" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/myProfile_btnMyProfile"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/user_profile_icon_purple" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView

        android:id="@+id/iv_SettingIcon_ForMyProfileMainActivity"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_15"
         android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_ivBadooLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_settings_icon_grey" />

    <ImageView
        android:id="@+id/iv_ProfileIcon_for_MainActivityProfile"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/myProfile_ivBadooLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user_profile_icon_grey" />

    <ImageView
        android:id="@+id/ivProfileIcon_MainActivitySelf"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="472dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProfile_ivBadooLogo"
        app:srcCompat="@drawable/profile_man_mainactivityprofileself" />

    <ImageView

        android:id="@+id/CameraIcon_for_profileMainActivitySelf"
        android:layout_width="57dp"
        android:layout_height="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/camera_icon_for_provileviewself"
        tools:layout_editor_absoluteY="168dp" />

    <TextView
        android:id="@+id/tvName_ProfileSelf_MainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/Name_ProfileView"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CameraIcon_for_profileMainActivitySelf" />


    <TextView
        android:id="@+id/tvBelowName_PreviewProfile_MainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="4dp"
        android:text="@string/BelowName_ProfileView_MainActivity"
        android:textColor="@color/tvLoginActivity_grey"
        android:textSize="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName_ProfileSelf_MainActivity" />

    <TextView
        android:id="@+id/tvCredits_ProfileViewSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_credits"
        android:drawablePadding="@dimen/dp_10"
        android:background="@drawable/rectanglewhiteforbutton"
        android:drawableStart="@drawable/badoo_token_ic_generic_coin"
        android:gravity="top"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_25"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_60"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBelowName_PreviewProfile_MainActivity"/>

    <TextView
        android:id="@+id/tvDiamond_Premium_ProfileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="13dp"
        android:background="@drawable/rectanglewhiteforbutton"
        android:drawableStart="@drawable/diamong_gold"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="top"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_60"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/txt_Premium"
        android:textSize="@dimen/dp_15"
        app:layout_constraintStart_toEndOf="@+id/tvCredits_ProfileViewSelf"
        app:layout_constraintTop_toBottomOf="@id/tvBelowName_PreviewProfile_MainActivity" />


    <TextView
        android:id="@+id/tvStandoutOnBadooTxt_MainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_128"
        android:layout_marginTop="12dp"
        android:text="@string/txt_StandOutonBadoo"
        android:textColor="@color/tvLoginActivity_grey"
        android:textSize="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCredits_ProfileViewSelf" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStandoutOnBadooTxt_MainActivity"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/rectanglewhite_purplebackground_profileviewself">

            <TextView
                android:id="@+id/Rectangle1_horizontalview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableTop="@drawable/diamong_gold"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/txt_SaveOnPremium"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/dp_150"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/txt_GetDiscountOnPremium" />

        </LinearLayout>


    </HorizontalScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>